<ItemLabel@Label>
    font_size:'25sp'
    halign:'left'
    valign:'middle'
    text_size:self.size

<Container>:
    rows:3
    nitro:nitro
    salt: salt
    starts:starts
    dextrose: dextrose
    time: time
    text_input: text_input
    AnchorLayout:
        size_hint:1,0.15
        TextInput:
            id:text_input
            multiline:False
            font_size:'45sp'
            input_type:'number'
            input_filter:'int'

    GridLayout:
        cols:2
        BoxLayout:
            padding:[30, 0, 0, 0]
            orientation:'vertical'
            ItemLabel:
                text:'Соль'
            ItemLabel:
                text:'Нитринная соль'
            ItemLabel:
                text:'Простые сахара'
            ItemLabel:
                text:'Старты'
            ItemLabel:
                text:'Время засолки'

        BoxLayout:
            orientation:'vertical'
            size_hint: 0.5,1
            ItemLabel:
                id: salt
                text:'0'
            ItemLabel:
                id: nitro
                text:'0'
            ItemLabel:
                id: dextrose
                text:'0'
            ItemLabel:
                id:starts
                text:'0'
            ItemLabel:
                id: time
                text:'0'

    BoxLayout:
        size_hint:0.9,0.15
        padding:[30,0,30,20]
        Button:
            font_size:30
            text:'Go'
            on_release:
                root.calculate()